<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qianbai"
        tools:context=".view.activity.AllSearchPage">

    <fragment
            android:id="@+id/allsearch_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <RelativeLayout
            android:id="@+id/search_R"
            android:background="@color/beijing"
            android:layout_below="@id/allsearch_actbar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_36">

        <ImageView
                android:id="@+id/search_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_8"
                android:background="@drawable/icon_search"
                android:layout_width="@dimen/icon_image_32"
                android:layout_height="@dimen/icon_image_32"/>

        <EditText
                android:id="@+id/search_message"
                android:imeOptions="actionSearch"
                android:textSize="@dimen/font_16"
                android:hint="输入内容进行搜索"
                android:maxLines="1"
                android:maxLength="25"
                android:inputType="text"
                android:textColor="@color/qihei"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_toRightOf="@id/search_image"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_below="@id/search_R"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/r1"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginHorizontal="@dimen/margin_8"
                    android:minHeight="80dp"
                    android:background="@drawable/cardview_gb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/t1"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_12"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:text="相关话题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/topic_tip_one"
                        android:translationY="@dimen/margin_12"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.4"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/lightgrey"
                        android:text="没有相关话题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/topic_search_list"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_below="@id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/r2"
                    android:visibility="gone"
                    android:layout_below="@id/r1"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginHorizontal="@dimen/margin_8"
                    android:minHeight="80dp"
                    android:background="@drawable/cardview_gb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/t2"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_12"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:text="相关用户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/user_tip_one"
                        android:translationY="@dimen/margin_12"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.4"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/lightgrey"
                        android:text="没有相关用户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_marginHorizontal="@dimen/margin_8"
                        android:layout_below="@id/t2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/user_search_list"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bar_search_recyclerview"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_below="@id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>