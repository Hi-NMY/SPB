<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.AttentionUserPage">

    <fragment
            android:id="@+id/attentionuser_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.Component.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/attentionuser_idt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_image_40" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/attentionuser_viewpager"
            android:layout_below="@id/attentionuser_idt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>