<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        tools:context=".view.activity.ChangeInformationPage">

    <fragment
            android:id="@+id/changeinformation_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.Component.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <LinearLayout
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_below="@id/changeinformation_actbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/r_username"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spb_activity_bar_44">
            <TextView
                    android:id="@+id/t1"
                    android:layout_marginRight="@dimen/margin_40"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/grey"
                    android:text="昵称"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <EditText
                    android:id="@+id/changeinformation_username"
                    android:textSize="@dimen/font_16"
                    android:hint="请输入合法昵称"
                    android:textColor="@color/qihei"
                    android:layout_toRightOf="@+id/t1"
                    android:layout_toLeftOf="@id/x1"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/x1"
                    android:textColor="@color/grey"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="0/10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/r_birth"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spb_activity_bar_44">
            <TextView
                    android:id="@+id/t2"
                    android:layout_marginRight="@dimen/margin_40"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/grey"
                    android:text="生日"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/changeinformation_birth"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/qihei"
                    android:layout_toRightOf="@+id/t2"
                    android:layout_toLeftOf="@id/x2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/x2"
                    android:background="@drawable/right_grey"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/icon_image_24"
                    android:layout_height="@dimen/icon_image_24"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/r_favorite"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spb_activity_bar_44">
            <TextView
                    android:id="@+id/t3"
                    android:layout_marginRight="@dimen/margin_40"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/grey"
                    android:text="喜好"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/changeinformation_favorite"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/qihei"
                    android:layout_toRightOf="@+id/t3"
                    android:layout_toLeftOf="@id/x3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/x3"
                    android:background="@drawable/right_grey"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/icon_image_24"
                    android:layout_height="@dimen/icon_image_24"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/r_home"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spb_activity_bar_44">
            <TextView
                    android:id="@+id/t4"
                    android:layout_marginRight="@dimen/margin_40"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/grey"
                    android:text="家乡"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/changeinformation_home"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/qihei"
                    android:layout_toRightOf="@+id/t4"
                    android:layout_toLeftOf="@id/x4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/x4"
                    android:background="@drawable/right_grey"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/icon_image_24"
                    android:layout_height="@dimen/icon_image_24"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>