<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.EnterPage">


    <ImageView
            android:id="@+id/bgimage"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/enterbg"
            android:layout_weight="1"/>

    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="@color/jingbai"
            android:layout_width="match_parent"
            android:layout_height="140dp">

        <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/logoimage"
                    android:background="@color/white"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_22"
                    android:text="校吧"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
                android:layout_margin="1dp"
                android:layout_toLeftOf="@+id/tabMode1"
                android:src="@drawable/circleloading"
                android:layout_width="@dimen/icon_image_16"
                android:layout_height="@dimen/icon_image_16"/>

        <TextView
                android:id="@+id/tabMode1"
                android:layout_margin="1dp"
                android:paddingRight="2dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_12"
                android:textColor="@color/lightgray"
                android:text="初始化数据..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>