<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/beijing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.NoticePage">

    <RelativeLayout
            android:id="@+id/officialnotice"
            android:background="@color/beijing"
            android:layout_below="@id/notice_actbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:id="@+id/ttttttt"
                android:textSize="@dimen/font_14"
                android:textColor="@color/qihei"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:text="官方通知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/small_img"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_grey"
                android:layout_width="@dimen/icon_image_24"
                android:layout_height="@dimen/icon_image_24"/>

        <View
                android:id="@+id/view_notice_official"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ttttttt"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_gravity="center"
                android:background="@drawable/simple_red"
                android:layout_width="10dp"
                android:layout_height="10dp"/>

    </RelativeLayout>

    <View
            android:id="@id/v1"
            android:layout_below="@id/officialnotice"
            android:alpha="0.3"
            android:background="@color/lightgray"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/notice_refresh"
            android:layout_below="@id/v1"
            android:background="@color/qianbai"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:minHeight="@dimen/icon_image_64"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txt"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/darkgrey"
                    android:text="刷新通知"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/notice_refresh_tgif"
                    android:layout_toLeftOf="@id/txt"
                    android:layout_centerInParent="true"
                    android:background="@drawable/loading1"
                    android:layout_width="@dimen/icon_image_32"
                    android:layout_height="@dimen/icon_image_32"
                    />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notice_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <RelativeLayout
            android:id="@+id/excess_r"
            android:background="@color/beijing"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:layout_centerInParent="true"
                android:background="@drawable/loading"
                android:layout_width="@dimen/icon_image_64"
                android:layout_height="@dimen/icon_image_64"
                />

        <TextView
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/gif"
                android:text="正在飞速加载数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <fragment
            android:id="@+id/notice_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>


</RelativeLayout>