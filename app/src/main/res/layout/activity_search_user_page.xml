<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.SearchUserPage">

    <fragment
            android:id="@+id/searchuser_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <TextView
            android:id="@+id/t1"
            android:paddingTop="@dimen/margin_4"
            android:background="@color/beijing"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/searchuser_actbar"
            android:text="*搜索结果仅展示相关30条信息"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/font_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:id="@+id/search_R"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_below="@id/t1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_36">

        <ImageView
                android:id="@+id/search_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_8"
                android:background="@drawable/icon_search"
                android:layout_width="@dimen/icon_image_32"
                android:layout_height="@dimen/icon_image_32"/>

        <EditText
                android:id="@+id/search_message"
                android:imeOptions="actionSearch"
                android:textSize="@dimen/font_16"
                android:hint="请输入昵称/账号搜索新朋友"
                android:maxLines="1"
                android:maxLength="25"
                android:inputType="text"
                android:textColor="@color/qihei"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_toRightOf="@id/search_image"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchuser_list"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_below="@+id/search_R"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>