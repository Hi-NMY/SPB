<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".view.activity.SendNewBarPage">

    <fragment
            android:id="@+id/sendnewbar_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.Component.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <View
            android:id="@+id/view"
            android:layout_below="@+id/sendnewbar_actbar"
            android:alpha="0.5"
            android:background="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <EditText
            android:id="@+id/sendnewbar_txt"
            android:layout_below="@+id/view"
            android:hint="开始吧，请随意发挥......."
            android:maxLength="900"
            android:paddingTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:gravity="left|top"
            android:lineSpacingMultiplier="1.8"
            android:textSize="@dimen/font_14"
            android:background="@color/beijing"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sendnewbar_image_list"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_below="@id/sendnewbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sendnewbar_image_add"
            android:layout_below="@id/sendnewbar_txt"
            android:layout_toRightOf="@id/sendnewbar_image_list"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/icon_addimage"
            android:layout_width="@dimen/icon_image_72"
            android:layout_height="@dimen/icon_image_72"/>

    <RelativeLayout
            android:id="@+id/bottom_r"
            android:background="@color/beijing"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
                android:alpha="0.5"
                android:background="@color/lightgrey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/bottom_flowlayout"
                android:layout_marginVertical="@dimen/margin_8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:max_select="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.zhy.view.flowlayout.TagFlowLayout>

        <ImageView
                android:id="@+id/bottom_add_image"
                android:layout_below="@id/bottom_flowlayout"
                android:layout_marginLeft="@dimen/margin_32"
                android:background="@drawable/icon_newbar_img"
                android:layout_width="@dimen/icon_image_44"
                android:layout_height="@dimen/icon_image_44"/>

        <ImageView
                android:id="@+id/bottom_add_voice"
                android:layout_below="@id/bottom_flowlayout"
                android:layout_toRightOf="@id/bottom_add_image"
                android:layout_marginLeft="@dimen/margin_16"
                android:background="@drawable/icon_newbar_voice1"
                android:layout_width="@dimen/icon_image_44"
                android:layout_height="@dimen/icon_image_44"/>

    </RelativeLayout>
</RelativeLayout>