<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:cp="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".view.activity.SendNewBarPage">

    <fragment
            android:id="@+id/sendnewbar_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.Component.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <View
            android:id="@+id/view"
            android:layout_below="@+id/sendnewbar_actbar"
            android:alpha="0.5"
            android:background="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <EditText
            android:id="@+id/sendnewbar_txt"
            android:layout_below="@+id/view"
            android:hint="开始吧，请随意发挥......."
            android:maxLength="900"
            android:paddingTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:gravity="left|top"
            android:lineSpacingMultiplier="1.8"
            android:textSize="@dimen/font_14"
            android:background="@color/beijing"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    <RelativeLayout
            android:id="@+id/sendnewbar_voice_r"
            android:visibility="gone"
            android:layout_below="@+id/sendnewbar_txt"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginRight="180dp"
            android:layout_marginLeft="@dimen/margin_12"
            android:background="@drawable/bar_music_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_40">

        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/voice_gif"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:background="@drawable/icon_voice_gif"
                android:layout_width="@dimen/icon_image_24"
                android:layout_height="@dimen/icon_image_24"/>

        <TextView
                android:id="@+id/voice_time"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_toRightOf="@+id/voice_gif"
                android:textColor="@color/beijing"
                android:textSize="@dimen/font_14"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_toRightOf="@id/voice_time"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/beijing"
                android:textSize="@dimen/font_12"
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/voice_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/close_circle"
                android:layout_width="@dimen/icon_image_36"
                android:layout_height="@dimen/icon_image_36"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sendnewbar_image_list"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_below="@id/sendnewbar_voice_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sendnewbar_image_add"
            android:layout_below="@id/sendnewbar_voice_r"
            android:layout_toRightOf="@id/sendnewbar_image_list"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:layout_marginVertical="@dimen/margin_20"
            android:src="@drawable/icon_addimage"
            android:layout_width="@dimen/icon_image_72"
            android:layout_height="@dimen/icon_image_72"/>

    <RelativeLayout
            android:id="@+id/bottom_r"
            android:background="@color/beijing"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/selectTopic_flowlayout"
                android:layout_marginVertical="@dimen/margin_8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:max_select="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.zhy.view.flowlayout.TagFlowLayout>

        <View
                android:id="@+id/view5"
                android:alpha="0.5"
                android:layout_below="@id/selectTopic_flowlayout"
                android:background="@color/lightgrey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/bottom_flowlayout"
                android:layout_below="@id/view5"
                android:layout_marginVertical="@dimen/margin_8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:max_select="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.zhy.view.flowlayout.TagFlowLayout>

        <ImageView
                android:id="@+id/bottom_add_image"
                android:layout_below="@id/bottom_flowlayout"
                android:layout_marginLeft="@dimen/margin_32"
                android:background="@drawable/icon_newbar_img"
                android:layout_width="@dimen/icon_image_44"
                android:layout_height="@dimen/icon_image_44"/>

        <ImageView
                android:id="@+id/bottom_add_voice"
                android:layout_below="@id/bottom_flowlayout"
                android:layout_toRightOf="@id/bottom_add_image"
                android:layout_marginLeft="@dimen/margin_16"
                android:background="@drawable/icon_newbar_voice1"
                android:layout_width="@dimen/icon_image_44"
                android:layout_height="@dimen/icon_image_44"/>

        <RelativeLayout
                android:id="@+id/bottom_voice_r"
                android:visibility="gone"
                android:layout_below="@+id/bottom_add_image"
                android:background="@color/qianbai"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <LinearLayout
                    android:id="@+id/voice_time_l"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/margin_24"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/voice_time_math"
                        android:textColor="@color/ziti"
                        android:textSize="@dimen/font_14"
                        android:gravity="center"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="@dimen/margin_2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/ziti"
                        android:textSize="@dimen/font_14"
                        android:text="S"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/voice_btn_r"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_below="@+id/voice_time_l"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:id="@+id/circle_r"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/circle_one"
                            app:riv_oval="true"
                            app:riv_corner_radius="360dp"
                            android:src="@color/theme_color"
                            android:layout_centerInParent="true"
                            android:alpha="0.2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/icon_image_56"
                            android:layout_height="@dimen/icon_image_56"
                            app:riv_oval="true"
                            app:riv_corner_radius="360dp"
                            android:layout_centerInParent="true"
                            android:src="@color/beijing" />

                    <com.example.spb.view.Component.CircleProgressBar
                            android:id="@+id/circleProgressbar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            cp:radius="30dp"
                            cp:strokeWidth="4dp"
                            cp:ringColor="@color/theme_color2" />

                    <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/circle_two"
                            app:riv_oval="true"
                            app:riv_corner_radius="360dp"
                            android:src="@color/theme_color"
                            android:layout_width="@dimen/icon_image_56"
                            android:layout_height="@dimen/icon_image_56"
                            android:layout_centerInParent="true"/>

                    <ImageView
                            android:id="@+id/voice_icon"
                            android:visibility="invisible"
                            android:background="@drawable/icon_voice_go"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/icon_image_32"
                            android:layout_height="@dimen/icon_image_32"/>

                </RelativeLayout>

                <ImageView
                        android:id="@+id/voice_submit"
                        android:visibility="gone"
                        android:background="@drawable/icon_voice_submit"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/circle_r"
                        android:layout_width="@dimen/icon_image_56"
                        android:layout_height="@dimen/icon_image_56"/>

                <ImageView
                        android:id="@+id/voice_delete"
                        android:visibility="gone"
                        android:background="@drawable/icon_voice_delete"
                        android:layout_marginRight="@dimen/margin_24"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/circle_r"
                        android:layout_width="@dimen/icon_image_44"
                        android:layout_height="@dimen/icon_image_44"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/voice_txt_tip"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/voice_btn_r"
                    android:text="点击录音"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>