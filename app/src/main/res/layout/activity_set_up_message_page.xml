<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.SetUpMessagePage">

    <fragment
            android:id="@+id/setup_message_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <RelativeLayout
            android:id="@+id/r1"
            android:layout_below="@id/setup_message_actbar"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="通知提示音"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch1"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r2"
            android:visibility="invisible"
            android:layout_below="@id/r1"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的生日"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch2"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r3"
            android:visibility="invisible"
            android:layout_below="@id/r2"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的星座"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch3"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r4"
            android:visibility="invisible"
            android:layout_below="@id/r3"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的家乡"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch4"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

</RelativeLayout>