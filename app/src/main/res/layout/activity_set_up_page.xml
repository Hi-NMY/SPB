<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/qianbai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.SetUpPage">
    <fragment
            android:id="@+id/setup_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <androidx.core.widget.NestedScrollView
            android:layout_below="@id/setup_actbar"
            android:background="@color/qianbai"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_marginTop="@dimen/margin_12"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="账户与安全"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_grey"
                        android:layout_width="@dimen/icon_image_24"
                        android:layout_height="@dimen/icon_image_24"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_marginTop="@dimen/margin_12"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="消息提醒"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img1"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_grey"
                        android:layout_width="@dimen/icon_image_24"
                        android:layout_height="@dimen/icon_image_24"/>

            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/r3"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="隐私设置"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img2"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_grey"
                        android:layout_width="@dimen/icon_image_24"
                        android:layout_height="@dimen/icon_image_24"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/r4"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="辅助功能"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img4"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_grey"
                        android:layout_width="@dimen/icon_image_24"
                        android:layout_height="@dimen/icon_image_24"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/r5"
                    android:layout_marginTop="@dimen/margin_12"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="版本信息"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/qihei"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img3"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_grey"
                        android:layout_width="@dimen/icon_image_24"
                        android:layout_height="@dimen/icon_image_24"/>

                <TextView
                        android:id="@+id/version_text"
                        android:text="10.10.2"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_14"
                        android:layout_toLeftOf="@id/img3"
                        android:textColor="@color/darkgrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/quit_login"
                    android:layout_marginTop="@dimen/margin_24"
                    android:background="@color/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_image_44">

                <TextView
                        android:text="退出登录"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/theme_color6"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>