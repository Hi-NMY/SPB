<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beijing"
        tools:context=".view.activity.SetUpPrivacyPage">

    <fragment
            android:id="@+id/setup_privacy_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <RelativeLayout
            android:id="@+id/r1"
            android:layout_below="@id/setup_privacy_actbar"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示在线天数"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch1"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r2"
            android:layout_below="@id/r1"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的生日"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch2"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r3"
            android:layout_below="@id/r2"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的星座"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch3"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r4"
            android:layout_below="@id/r3"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的家乡"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch4"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r5"
            android:layout_below="@id/r4"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示我的喜好"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch5"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
            android:id="@+id/v"
            android:layout_below="@id/r5"
            android:background="@color/qianbai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_12"/>

    <RelativeLayout
            android:id="@+id/r6"
            android:layout_below="@id/v"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="展示关注和粉丝数量"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch6"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/r7"
            android:layout_below="@id/r6"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="可以查看我的全部徽章"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch7"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/r8"
            android:layout_below="@id/r7"
            android:background="@color/beijing"
            android:paddingHorizontal="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_image_56">

        <TextView
                android:layout_marginLeft="@dimen/margin_8"
                android:text="双向关注才能查看我的主页"
                android:textSize="@dimen/font_16"
                android:textColor="@color/qihei"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/switch8"
                android:switchMinWidth="40dp"
                android:checked="true"
                android:background="@null"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/yinbai"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>

</RelativeLayout>