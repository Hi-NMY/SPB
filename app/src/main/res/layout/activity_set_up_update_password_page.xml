<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        tools:context=".view.activity.SetUpUpdatePasswordPage">

    <fragment
            android:id="@+id/setup_updatepassword_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <RelativeLayout
            android:id="@+id/r_3"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_below="@+id/setup_updatepassword_actbar"
            android:layout_width="match_parent"
            android:background="@color/beijing"
            android:layout_height="@dimen/icon_image_44">

        <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:gravity="center"
                android:text="旧 密 码 : "
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

        <EditText
                android:id="@+id/updatepassword_old"
                android:inputType="text"
                android:maxLength="16"
                android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,/?\+=-_!@#$%"
                android:hint="请输入原始密码"
                android:gravity="left|center"
                android:layout_toRightOf="@+id/t3"
                android:textSize="@dimen/font_14"
                android:paddingLeft="@dimen/margin_12"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

    </RelativeLayout>
    <View
            android:id="@+id/v2"
            android:layout_below="@+id/r_3"
            android:background="@color/qianbai"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <RelativeLayout
            android:id="@+id/r_4"
            android:layout_below="@+id/v2"
            android:layout_width="match_parent"
            android:background="@color/beijing"
            android:layout_height="45dp">

        <TextView
                android:id="@+id/t4"
                android:gravity="center"
                android:text="新 密 码 : "
                android:textSize="@dimen/font_14"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <EditText
                android:id="@+id/updatepassword_password"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:textSize="@dimen/font_14"
                android:paddingLeft="@dimen/margin_12"
                android:maxLength="16"
                android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,/?\+=-_!@#$%"
                android:hint="请输入8-16位合法密码"
                android:layout_toRightOf="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/updatepassword_password_eye"
                android:background="@null"/>

        <ImageView
                android:id="@+id/updatepassword_password_eye"
                android:layout_margin="@dimen/margin_8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/eye_no"
                android:layout_width="@dimen/icon_image_16"
                android:layout_height="@dimen/icon_image_16"/>

    </RelativeLayout>

    <View
            android:id="@+id/v3"
            android:layout_below="@+id/r_4"
            android:background="@color/qianbai"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <RelativeLayout
            android:id="@+id/r_5"
            android:layout_below="@+id/v3"
            android:layout_width="match_parent"
            android:background="@color/beijing"
            android:layout_height="45dp">

        <TextView
                android:id="@+id/t5"
                android:gravity="center"
                android:text="确   认 : "
                android:layout_marginLeft="@dimen/margin_16"
                android:textSize="@dimen/font_14"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <EditText
                android:id="@+id/updatepassword_again"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:textSize="@dimen/font_14"
                android:paddingLeft="@dimen/margin_12"
                android:maxLength="16"
                android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,/?\+=-_!@#$%"
                android:hint="请确认密码"
                android:layout_toRightOf="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

    </RelativeLayout>

    <Button
            android:id="@+id/reg_star_btn"
            android:layout_below="@+id/r_5"
            android:textColor="@color/white"
            android:text="确认"
            android:layout_marginTop="64dp"
            android:layout_centerHorizontal="true"
            android:stateListAnimator="@null"
            android:background="@drawable/enter_next_login"
            android:layout_width="112dp"
            android:layout_height="44dp"/>
</RelativeLayout>