<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.UserCoursePage">

    <fragment
            android:id="@+id/usercourse_actbar"
            android:layout_width="match_parent"
            android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
            android:layout_height="@dimen/spb_activity_bar_44"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subject_list"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_below="@id/usercourse_actbar"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>