<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:background="@color/beijing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.activity.UserRegisteredPage">

            <fragment
                    android:id="@+id/user_egisterd_actbar"
                    android:layout_width="match_parent"
                    android:name="com.example.spb.view.fragment.FragmentSpbAvtivityBar"
                    android:layout_height="@dimen/spb_activity_bar_44"/>

            <TextView
                    android:id="@+id/text"
                    android:textSize="@dimen/font_22"
                    android:layout_marginTop="64dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="欢迎\n注册"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <RelativeLayout
                    android:id="@+id/reg_r"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_centerHorizontal="true"
                    android:background="@color/beijing"
                    android:paddingLeft="@dimen/margin_12"
                    android:paddingRight="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:id="@+id/r_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/t1"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="头         像 : "
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/registered_user_headimg"
                            android:layout_marginLeft="@dimen/margin_12"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="360dp"
                            app:riv_border_width="2dp"
                            app:riv_border_color="@color/lightgrey"
                            app:riv_oval="true"
                            android:src="@drawable/add_image"
                            android:layout_marginTop="@dimen/margin_12"
                            android:layout_toRightOf="@id/t1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/r_2"
                        android:layout_below="@+id/r_1"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_width="match_parent"
                        android:background="@color/beijing"
                        android:layout_height="45dp">

                    <TextView
                            android:id="@+id/t2"
                            android:gravity="center"
                            android:text="昵         称 : "
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>

                    <EditText
                            android:id="@+id/reg_user_name"
                            android:hint="请输入合法字符"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/margin_12"
                            android:textSize="@dimen/font_14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/t2"
                            android:maxLines="1"
                            android:maxLength="15"
                            android:background="@null" />

                </RelativeLayout>
                <View
                        android:id="@+id/v1"
                        android:layout_below="@+id/r_2"
                        android:background="@color/qianbai"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                <RelativeLayout
                        android:id="@+id/r_3"
                        android:layout_below="@+id/v1"
                        android:layout_width="match_parent"
                        android:background="@color/beijing"
                        android:layout_height="45dp">

                    <TextView
                            android:id="@+id/t3"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:gravity="center"
                            android:text="账         号 : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14" />

                    <EditText
                            android:id="@+id/reg_user_account"
                            android:hint="请输入G开头学号"
                            android:gravity="left|center"
                            android:layout_toRightOf="@+id/t3"
                            android:textSize="@dimen/font_14"
                            android:paddingLeft="@dimen/margin_12"
                            android:maxLines="1"
                            android:maxLength="9"
                            android:digits="G1234567890"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"/>

                </RelativeLayout>
                <View
                        android:id="@+id/v2"
                        android:layout_below="@+id/r_3"
                        android:background="@color/qianbai"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <RelativeLayout
                        android:id="@+id/r_4"
                        android:layout_below="@+id/v2"
                        android:layout_width="match_parent"
                        android:background="@color/beijing"
                        android:layout_height="45dp">

                    <TextView
                            android:id="@+id/t4"
                            android:gravity="center"
                            android:text="密         码 : "
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>

                    <EditText
                            android:id="@+id/reg_user_password"
                            android:inputType="textPassword"
                            android:gravity="left|center"
                            android:textSize="@dimen/font_14"
                            android:paddingLeft="@dimen/margin_12"
                            android:maxLength="16"
                            android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,/?\+=-_!@#$%"
                            android:hint="请输入8-16位合法密码"
                            android:layout_toRightOf="@+id/t4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/reg_password_eye"
                            android:background="@null"/>

                    <ImageView
                            android:id="@+id/reg_password_eye"
                            android:layout_margin="@dimen/margin_8"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/eye_no"
                            android:layout_width="@dimen/icon_image_16"
                            android:layout_height="@dimen/icon_image_16"/>

                </RelativeLayout>

                <View
                        android:id="@+id/v3"
                        android:layout_below="@+id/r_4"
                        android:background="@color/qianbai"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <RelativeLayout
                        android:id="@+id/r_5"
                        android:layout_below="@+id/v3"
                        android:layout_width="match_parent"
                        android:background="@color/beijing"
                        android:layout_height="45dp">

                    <TextView
                            android:id="@+id/t5"
                            android:gravity="center"
                            android:text="确认 密码 : "
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>

                    <EditText
                            android:id="@+id/reg_user_password_again"
                            android:inputType="textPassword"
                            android:gravity="left|center"
                            android:textSize="@dimen/font_14"
                            android:paddingLeft="@dimen/margin_12"
                            android:maxLength="16"
                            android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,/?\+=-_!@#$%"
                            android:hint="请确认密码"
                            android:layout_toRightOf="@+id/t5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"/>

                </RelativeLayout>

            </RelativeLayout>

            <Button
                    android:id="@+id/reg_star_btn"
                    android:layout_below="@+id/reg_r"
                    android:textColor="@color/white"
                    android:text="注册"
                    android:layout_marginTop="64dp"
                    android:layout_centerHorizontal="true"
                    android:stateListAnimator="@null"
                    android:background="@drawable/enter_next_login"
                    android:layout_width="112dp"
                    android:layout_height="44dp"/>

        </RelativeLayout>
</ScrollView>