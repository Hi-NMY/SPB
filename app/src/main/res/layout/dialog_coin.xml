<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/margin_20"
            android:paddingVertical="@dimen/margin_16"
            android:background="@drawable/coin_dialog_bg"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/coin_image"
                android:background="@drawable/icon_coin"
                android:layout_width="@dimen/icon_image_72"
                android:layout_height="@dimen/icon_image_72"/>

        <ImageView
                android:id="@+id/close"
                android:layout_marginTop="@dimen/margin__12"
                android:paddingLeft="@dimen/margin__8"
                android:layout_toRightOf="@+id/coin_image"
                android:src="@drawable/close_black"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        <TextView
                android:id="@+id/coin_size"
                android:textColor="@color/yanghong"
                android:layout_marginTop="@dimen/margin_4"
                android:textSize="@dimen/font_16"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/coin_image"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@color/qihei"
                android:layout_marginTop="@dimen/margin_8"
                android:textSize="@dimen/font_14"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/coin_size"
                android:text="已打卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>