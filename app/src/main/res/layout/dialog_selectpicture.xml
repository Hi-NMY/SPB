<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:background="@drawable/cardview_gb"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dialog_title"
                android:gravity="center"
                android:textSize="@dimen/font_14"
                android:text="选择图片来源"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_image_40"/>
        <View
                android:background="@color/darkgrey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <TextView
                android:id="@+id/dialog_camera"
                android:textSize="@dimen/font_18"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="照相机"
                android:textColor="@color/qihei"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_image_56"/>
        <View
                android:background="@color/darkgrey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <TextView
                android:id="@+id/dialog_photoalbum"
                android:textSize="@dimen/font_18"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="相册"
                android:textColor="@color/qihei"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_image_56"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginVertical="@dimen/margin_16"
            android:background="@drawable/cardview_gb"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dialog_close"
                android:textSize="@dimen/font_18"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:text="取消"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_image_56"/>

    </LinearLayout>

</LinearLayout>