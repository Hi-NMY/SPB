<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/qianbai"
                android:clipChildren="false"
                android:clipToPadding="false"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/diary_item_r"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_40"
            android:minHeight="100dp"
            android:background="@drawable/cardview_gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/diary_date_year"
                android:layout_marginLeft="@dimen/margin_16"
                android:translationY="@dimen/margin__24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/qihei"
                android:textStyle="bold"
                android:textSize="@dimen/font_22"
                android:text="2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_date_month"
                android:layout_marginLeft="@dimen/margin_16"
                android:translationY="-38dp"
                app:layout_constraintTop_toBottomOf="@id/diary_date_year"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/qihei"
                android:textStyle="bold"
                android:textSize="@dimen/font_22"
                android:text="03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_date_day"
                android:translationY="-38dp"
                app:layout_constraintTop_toBottomOf="@id/diary_date_year"
                app:layout_constraintLeft_toRightOf="@id/diary_date_month"
                android:textColor="@color/qihei"
                android:textStyle="bold"
                android:textSize="@dimen/font_22"
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_date_week"
                android:translationY="@dimen/margin__32"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_2"
                app:layout_constraintTop_toBottomOf="@id/diary_date_month"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/diary_date_day"
                android:textColor="@color/qihei"
                android:textSize="@dimen/font_14"
                android:text="星期三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_date_time"
                android:layout_marginLeft="@dimen/margin_12"
                android:translationY="@dimen/margin__32"
                app:layout_constraintBaseline_toBaselineOf="@id/diary_date_week"
                app:layout_constraintTop_toBottomOf="@id/diary_date_month"
                app:layout_constraintLeft_toRightOf="@id/diary_date_week"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12"
                android:text="黄昏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <ImageView
                android:id="@+id/diary_weather"
                android:background="@color/qihei"
                android:layout_marginLeft="@dimen/margin_12"
                android:translationY="@dimen/margin__32"
                app:layout_constraintTop_toBottomOf="@id/diary_date_month"
                app:layout_constraintLeft_toRightOf="@+id/diary_date_time"
                android:layout_width="@dimen/icon_image_24"
                android:layout_height="@dimen/icon_image_24"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_message"
                android:layout_marginTop="@dimen/margin_8"
                android:translationY="@dimen/margin__20"
                app:layout_constraintTop_toBottomOf="@id/diary_date_week"
                app:layout_constraintLeft_toLeftOf="@id/diary_date_week"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_16"
                android:maxWidth="172dp"
                android:text="第三、你、\n方发\n阿萨\n大大大\n大所的在\n下次行n\政\n村\naaadafassadadsasdadaddasdsadadasddadadafdada\ndasfdfd\nsfsfsdfsf\nsfsfada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

        <ImageView
                android:id="@+id/diary_img"
                android:visibility="visible"
                android:background="@color/qihei"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_16"
                android:translationY="@dimen/margin__24"
                app:layout_constraintTop_toBottomOf="@id/diary_weather"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/diary_tip"
                android:layout_margin="@dimen/margin_8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_10"
                android:text="长按即可删除日记"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>