<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/item_postvideo_RA"
            android:minHeight="140dp"
            android:layout_marginVertical="@dimen/margin_4"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:background="@drawable/cardview_gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_postvideo_user_headimg"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="centerCrop"
                android:src="@drawable/enterbg"
                android:layout_width="@dimen/icon_image_40"
                android:layout_height="@dimen/icon_image_40"
                app:riv_corner_radius="@dimen/corner_16"
                app:riv_oval="true"/>

        <TextView
                android:id="@+id/item_postvideo_username"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_alignTop="@id/item_postvideo_user_headimg"
                android:layout_toRightOf="@id/item_postvideo_user_headimg"
                android:textSize="@dimen/font_14"
                android:textColor="@color/black"
                android:text="撒大声地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/item_postvideo_userbadge"
                android:layout_marginLeft="@dimen/margin_4"
                android:background="@drawable/enterbg"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@id/item_postvideo_username"
                android:layout_alignTop="@id/item_postvideo_username"
                android:layout_toRightOf="@id/item_postvideo_username"
                android:layout_width="@dimen/icon_image_16"
                android:layout_height="@dimen/icon_image_16"/>

        <TextView
                android:id="@+id/item_postvideo_postdate"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_toRightOf="@id/item_postvideo_user_headimg"
                android:layout_alignBottom="@id/item_postvideo_user_headimg"
                android:textSize="@dimen/font_12"
                android:textColor="@color/darkgray"
                android:text="2020-12-06 12:32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/item_postvideo_more"
                android:src="@drawable/icon_more"
                android:layout_alignTop="@+id/item_postvideo_user_headimg"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:layout_alignBottom="@id/item_postvideo_user_headimg"
                android:layout_width="@dimen/icon_image_32"
                android:layout_height="@dimen/icon_image_32"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/video_card"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/corner_8"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_below="@id/item_postvideo_more"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                        android:id="@+id/detail_player"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <TextView
                android:id="@+id/item_postvideo_txt"
                android:visibility="gone"
                android:text=""
                android:lineSpacingMultiplier="1.5"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_below="@id/video_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/item_postvideo_topic"
                android:visibility="gone"
                android:layout_below="@id/item_postvideo_txt"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:max_select="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.zhy.view.flowlayout.TagFlowLayout>

        <TextView
                android:id="@+id/item_postvideo_location"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_below="@+id/item_postvideo_topic"
                android:layout_marginVertical="@dimen/margin_8"
                android:textSize="@dimen/font_14"
                android:textColor="@color/darkgrey"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_4"
                android:layout_below="@+id/item_postvideo_location"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/item_postvideo_share_R"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/item_postvideo_share_img"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/icon_image_32"
                        android:layout_height="@dimen/icon_image_32"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/item_postvideo_comment_R"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/item_postvideo_comment_img"
                        android:background="@drawable/icon_comment"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/icon_image_32"
                        android:layout_height="@dimen/icon_image_32"/>

                <TextView
                        android:id="@+id/item_postvideo_comment_num"
                        android:visibility="gone"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_12"
                        android:text="2365"
                        android:gravity="center"
                        android:layout_alignBottom="@id/item_postvideo_comment_img"
                        android:layout_alignTop="@+id/item_postvideo_comment_img"
                        android:layout_toRightOf="@+id/item_postvideo_comment_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/item_postvideo_like_R"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/item_postvideo_like_img"
                        android:background="@drawable/icon_like"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/icon_image_32"
                        android:layout_height="@dimen/icon_image_32"/>

                <TextView
                        android:id="@+id/item_postvideo_like_num"
                        android:visibility="gone"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_12"
                        android:text="2365"
                        android:gravity="center"
                        android:layout_alignBottom="@id/item_postvideo_like_img"
                        android:layout_alignTop="@+id/item_postvideo_like_img"
                        android:layout_toRightOf="@+id/item_postvideo_like_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>