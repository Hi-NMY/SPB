<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/subject_name"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/ziti"
                    android:text=""
                    android:textSize="@dimen/font_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/subject_date_tip"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_alignTop="@id/subject_name"
                    android:layout_alignBottom="@id/subject_name"
                    android:layout_toEndOf="@id/subject_name"
                    android:textColor="@color/theme_color"
                    android:text=""
                    android:textSize="@dimen/font_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/class_teacher"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/qihei"
                    android:text=""
                    android:textSize="@dimen/font_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/class_room"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/img"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/img"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/subject_name"
                    android:background="@drawable/icon_date_line"
                    android:layout_width="@dimen/icon_image_32"
                    android:layout_height="@dimen/icon_image_32"/>

            <TextView
                    android:id="@+id/date_start"
                    android:layout_marginHorizontal="@dimen/margin_4"
                    android:gravity="center"
                    android:layout_alignBottom="@id/img"
                    android:layout_alignTop="@id/img"
                    android:layout_toStartOf="@id/img"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/ziti"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/date_over"
                    android:layout_marginHorizontal="@dimen/margin_4"
                    android:gravity="center"
                    android:layout_alignBottom="@id/img"
                    android:layout_alignTop="@id/img"
                    android:layout_toEndOf="@id/img"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/ziti"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_below="@id/class_room"
                    android:background="@color/yinbai"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
        </RelativeLayout>
</RelativeLayout>