<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_topic_list_headimg"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:layout_marginVertical="@dimen/margin_12"
            android:scaleType="centerCrop"
            android:src="@drawable/enterbg"
            android:layout_width="@dimen/icon_image_44"
            android:layout_height="@dimen/icon_image_44"
            app:riv_corner_radius="@dimen/corner_16"/>

    <TextView
            android:id="@+id/item_topic_list_title"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignTop="@id/item_topic_list_headimg"
            android:layout_toRightOf="@id/item_topic_list_headimg"
            android:text=""
            android:textSize="@dimen/font_14"
            android:textColor="@color/qihei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/item_topic_list_attentionnum"
            android:layout_below="@id/item_topic_list_title"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_toRightOf="@id/item_topic_list_headimg"
            android:text="活跃量"
            android:textSize="@dimen/font_12"
            android:textColor="@color/darkgrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>