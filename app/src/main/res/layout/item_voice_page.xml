<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/qianbai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:minHeight="100dp"
            android:layout_marginVertical="@dimen/margin_4"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:background="@drawable/cardview_gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_voice_user_headimg"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="centerCrop"
                android:src="@drawable/enterbg"
                android:layout_width="@dimen/icon_image_40"
                android:layout_height="@dimen/icon_image_40"
                app:riv_corner_radius="360dp"
                app:riv_oval="true"/>

        <TextView
                android:id="@+id/item_voice_username"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_alignTop="@id/item_voice_user_headimg"
                android:layout_toRightOf="@id/item_voice_user_headimg"
                android:textSize="@dimen/font_14"
                android:textColor="@color/black"
                android:text="撒大声地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/item_voice_userbadge"
                android:layout_marginLeft="@dimen/margin_4"
                android:background="@drawable/enterbg"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@id/item_voice_username"
                android:layout_alignTop="@id/item_voice_username"
                android:layout_toRightOf="@id/item_voice_username"
                android:layout_width="@dimen/icon_image_16"
                android:layout_height="@dimen/icon_image_16"/>

        <TextView
                android:id="@+id/item_voice_postdate"
                android:layout_toRightOf="@id/item_voice_user_headimg"
                android:layout_alignBottom="@id/item_voice_user_headimg"
                android:textSize="@dimen/font_12"
                android:textColor="@color/darkgray"
                android:text="关注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_voice_txt"
                android:text="傻傻的贺卡是的哈水电卡水电卡较\n好的卡号的"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/margin_12"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_below="@id/item_voice_user_headimg"
                android:minHeight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>