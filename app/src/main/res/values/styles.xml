<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/beijing</item>
        <item name="colorPrimaryDark">@color/beijing</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="EnterPageBg" parent="AppTheme">
        <item name="android:windowBackground">@drawable/enterbg</item>
    </style>

    <style name="NoBackgroundTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialogHomeSend_anim">
        <item name="android:windowEnterAnimation">@anim/homesend_show</item>
        <item name="android:windowExitAnimation">@anim/homesend_dismiss</item>
    </style>

    <style name="dialogHomeSend" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowAnimationStyle">@style/dialogHomeSend_anim</item>
    </style>

    <style name="bottomdialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!-- dialog的动画 -->
    <style name="bottomdialog_animStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

</resources>
